diff --git a/crc32.cpp b/crc32.cpp
--- a/crc32.cpp
+++ b/crc32.cpp
@@ -7,8 +7,10 @@
 #include "crc32.h"
 
 // big endian architectures need #define __BYTE_ORDER __BIG_ENDIAN
-#ifndef _MSC_VER
-#include <endian.h>
+#if defined(__APPLE__)
+  #include <machine/endian.h>
+#elif !defined(_MSC_VER)
+  #include <endian.h>
 #endif
 
 
