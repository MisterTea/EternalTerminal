import("//build/config/linux/pkg_config.gni")

pkg_config("system_zlib") {
  packages = [ "zlib" ]
  defines = [ "USE_SYSTEM_ZLIB=1" ]
}

config("zlib_config") {
  if(is_win && !is_component_build) {
    ldflags = ["/ignore:4099"] # needed on VCPKG CI builds
  }
  configs = [ 
    ":system_zlib",
  ]
}

source_set("zlib") {
  public_configs = [ 
    ":system_zlib",
  ]
}
