{
  "name": "jasper",
  "version": "2.0.33",
  "port-version": 3,
  "description": "Open source implementation of the JPEG-2000 Part-1 standard",
  "homepage": "https://github.com/mdadams/jasper",
  "dependencies": [
    "libjpeg-turbo",
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "default-features": [
    "opengl"
  ],
  "features": {
    "opengl": {
      "description": "Enable the use of the OpenGL/GLUT Library",
      "dependencies": [
        {
          "name": "freeglut",
          "platform": "!osx"
        },
        "opengl"
      ]
    }
  }
}
